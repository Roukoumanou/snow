{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row" id="tricks">
            {% for trick in tricks %}
                {% set image = trick.images|first %}
            {% if image %}
                {% set cover = image.name %}
            {% else %}
                {% set cover = 'me-622e7cad5b1e1.jpg' %}
            {% endif %}
                <div class="col-md-3 mb-2">
                    <div class="card">
                        <img style="height: 15rem;" src="{{ asset('uploads/tricks/' ~ cover) }}" class="card-img-top" alt="Image de la figure {{ trick.name }}">
                        
                        <div class="card-body">
                            <a href="{{ path('trick_show', {id: trick.id}) }}" class="h5 card-title">{{ trick.name|title }}</a>
    
                            {% if app.user %}
                                <div class="row">
                                    <div class="col mt-3">
                                        <a href="{{ path('trick_update', {id: trick.id}) }}" class="card-link">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                    </div>
                                    <div class="col">
                                        {% include "tricks/form/delete.html.twig" %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
