{% extends "base.html.twig" %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Sauver</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _trick_form_images_widget %}
{{ form_widget(form) }}

<input type="hidden" id="widgets-counter" value="0">

<div class="form-group">
    <button type="button" class="btn btn-light" id="add-image">Ajouter une image</button>
</div>
    
{% endblock %}

{% block _trick_form_images_entry_widget %}
<div class="form-group mb-2" id="block-{{id}}">
    <div class="row">
        <div class="col-10">
            {{ form_widget(form.fileType) }}
        </div>
        <div class="col-2">
            <button type="button" data-target="#block-{{ id }}" class="badge bg-danger" data-action="delete">X</button>
        </div>
    </div>
</div>
{% endblock %}

{% block _trick_form_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('tricks') }}
{% endblock %}
